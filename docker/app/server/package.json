{
  "name": "kiosk-game-server",
  "version": "1.0.0",
  "description": "Express server for kiosk game with prize engine",
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "app.ts",
  "scripts": {
    "dev": "tsx watch --env-file=.env app.ts",
    "build": "tsc",
    "start": "tsx watch app.ts",
    "prod": "NODE_ENV=production node ./dist/server/app.js",
    "tsc": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "migrate": "tsx scripts/migrate-settings-to-db.ts",
    "migrate:remove-unique": "tsx scripts/migrate-remove-unique-constraint.ts",
    "migrate:game-state": "tsx scripts/migrate-add-game-state.ts",
    "migrate:play-log": "tsx scripts/migrate-add-play-log.ts",
    "migrate:scheduled-date": "tsx scripts/migrate-add-scheduled-date.ts",
    "db:seed": "tsx scripts/seed-database.ts",
    "preseed:activation": "tsx scripts/preseed-activation.ts",
    "preseed:activation:dry-run": "tsx scripts/preseed-activation.ts --dry-run",
    "simulate:poisson": "tsx simulate-prizes.ts --profile poisson --base-rate 100",
    "simulate:peak": "tsx simulate-prizes.ts --profile peak",
    "simulate:custom": "tsx simulate-prizes.ts",
    "backup": "tsx scripts/backup-database.ts",
    "backup:custom": "tsx scripts/backup-database.ts --"
  },
  "author": "Beda Binder",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^1.4.12",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "multer": "^1.4.5-lts.1",
    "node-cleanup": "^2.1.2",
    "pdfkit": "^0.16.0",
    "phidget22": "^3.22.5",
    "pngjs": "^7.0.0",
    "socket.io": "^4.8.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.2.1",
    "@types/node-cleanup": "^2.1.5",
    "@types/pdfkit": "^0.13.8",
    "@types/pngjs": "^6.0.5",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.15.0",
    "eslint-plugin-import": "^2.31.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.9",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  }
}
